@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 text-center">
    <!-- Título principal con estilo -->
    <h1 class="display-4 text-primary">¡Bienvenido!</h1>

    <!-- Subtítulo con enlace informativo -->
    <p class="lead">Aprende sobre <a href="https://learn.microsoft.com/aspnet/core" class="text-info" target="_blank">cómo construir aplicaciones Web con ASP.NET Core</a>.</p>

    <!-- Botón que lleva a la página de productos -->
    <a href="@Url.Action("Index", "Productoes")" class="btn btn-primary btn-lg mt-4">
        <i class="bi bi-box-seam"></i> Ver Productos
    </a>
</div>

<!-- Sección para los scripts de Bootstrap y los íconos -->
@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" rel="stylesheet" />
}

